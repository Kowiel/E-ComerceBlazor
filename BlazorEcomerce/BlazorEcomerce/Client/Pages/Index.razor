@inject IProductService _ProductService
@page "/"
@page "/serch/{searchText}"
@page "/{categoryURL}"

<PageTitle>Urban Shop</PageTitle>

<ProductList></ProductList>

@code
{
    [Parameter]
    public string CategoryURL { get; set; } = null;

    [Parameter]
    public string searchText { get; set; } = null;

    protected override async Task OnParametersSetAsync()
    {
        if(searchText!=null)
        {
            await _ProductService.SerchProducts(searchText);
        }
        else
        {
             await _ProductService.GetAllProducts(CategoryURL);
        }
    }
}
